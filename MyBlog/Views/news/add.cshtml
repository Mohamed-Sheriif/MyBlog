@model news
@{
    ViewBag.Title = "add";
}

<div style="width: 50%; margin-bottom: 20px; color: darkslategray">
    <h2 style="text-align:center ; font-family:Candara">Add News</h2>
</div>

<form method="post" enctype="multipart/form-data">
    <table width="100%" style="font-family: Candara; color: darkslategray ; font-weight:bold ;font-size:20px">
        <tr>
            <td>@Html.LabelFor(n => n.title)</td>
            <td>@Html.TextBoxFor(n => n.title, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(n => n.title , null,new {@class="text-danger" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(n => n.bref)</td>
            <td>@Html.TextAreaFor(n => n.bref, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(n => n.bref,null ,new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(n => n.des)</td>
            <td>@Html.TextAreaFor(n => n.des, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(n => n.des,null , new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(n => n.photo)</td>
            <td><input type="file" name="img" class="btn btn-info" /></td>
            <td></td>
        </tr>
        <tr>
            <td>@Html.LabelFor(n => n.catalog)</td>
            <td>@Html.DropDownListFor(n => n.cat_id, (SelectList)ViewBag.cat, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(n => n.des,null , new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="save" class="btn btn-info" /></td>
            <td></td>
        </tr>

    </table>
</form>
@section scripts{

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

